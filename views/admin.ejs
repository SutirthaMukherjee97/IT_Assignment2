<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Admin Page</title>
</head>
<body>
    <%- include('partials/nav',{ isAdminLoggedIn : true, isUserLoggedIn }); %>
    <div class="mx-3 mb-5" style="margin-top:100px">
        <h1 class="mb-4">
            Admin Name : <%= adminUsername %>
        </h1>
        <section>
            <!-- <h2 class="my-4">Users Registered : </h2> -->
            <ul class="list-group">
            <%users.map((user)=>{%>
                <li class="list-group-item">
                    <div>
                        <h3 class="my-5">Hello <%= user.username %>! Welcome to your profile!</h3>
                        <h5 class="my-4">Files that you have uploaded :</h5>
                        <div class="d-flex my-2">
                            <%user.files.map((file)=>{ %>
                                <div class="card mx-2" style="width: 18rem;">
                                    <object data="/files/<%= file.name %>" class="card-img-top" type=<%= file.mimetype %>></object>
                                    <div class="card-body">
                                      <h5 class="card-title"><%= file.name %></h5>
                                      <a href="/files/<%= file.name %>" class="btn btn-primary">Download the following files</a>
                                    </div>
                                </div>
                            
                            <%})%>
                        </div>
                    </div>
                    
                </li>
            <%})%>
            </ul>
        </section>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>